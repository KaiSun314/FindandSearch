<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SunDragon.FindandSearch">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/text_search_icon"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@mipmap/text_search_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.SunDragon.FindandSearch.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.SunDragon.FindandSearch.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.SunDragon.FindandSearch.findSearchActivity"
            android:label="@string/title_activity_find_search"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.SunDragon.FindandSearch.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>